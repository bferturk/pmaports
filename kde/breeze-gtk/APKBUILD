# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=breeze-gtk
pkgver=5.15.5
pkgrel=0
pkgdesc="A GTK Theme Built to Match KDE's Breeze"
arch="all"
url="https://www.kde.org/workspaces/plasmadesktop/"
license="LGPL-2.1-only"
depends="gtk-engines breeze"
makedepends="extra-cmake-modules sassc breeze-dev py3-cairo"
source="https://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebugInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="61416aa88b50cca55df03b6eb95f6d5f6f7700fb64730668d777155c5ec0a892d00b9dd659f8a4ab86ba0c857d7bb52954563cdb8df2498f8fdfbea95c1cdd59  breeze-gtk-5.15.5.tar.xz"
