# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgbase=smbus2
pkgname=py-smbus2
pkgver=0.2.1
pkgrel=0
pkgdesc=" A drop-in replacement for smbus-cffi/smbus-python in pure Python"
arch="noarch"
url="https://github.com/kplindegaard/smbus2"
license="MIT"
depends=""
makedepends="py-setuptools python2-dev python3-dev py-mock py-nose"
source="$pkgname-$pkgver.tar.gz::https://github.com/kplindegaard/$pkgbase/archive/$pkgver.tar.gz"
subpackages="py2-${pkgname/py-/}:_py2 py3-${pkgname/py-/}:_py3"
builddir="$srcdir/$pkgbase-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

check() {
	cd "$builddir"
	python setup.py test
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	_py python2
}

_py3() {
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"
	
	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}
sha512sums="4b771a239030c27e5feea502017da5cb75ca790ebea090c9c321137fd07a7f0dc9369d66e16bce14dd11c88a9c16dbe05152071ad7083a12687e9fce600754db  py-smbus2-0.2.1.tar.gz"
