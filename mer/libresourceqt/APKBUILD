pkgname=libresourceqt
pkgver=1.30.3
pkgrel=0
pkgdesc="Nemo's libresourceqt"
url="https://git.merproject.org/mer-core/libresourceqt"
arch="all"
license="LGPL-2.1-or-later"
makedepends="qt5-qtbase-dev libresource-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="https://git.merproject.org/mer-core/$pkgname/-/archive/$pkgver/$pkgname-$pkgver.tar.gz"
options="!check" # No suitable tests

build(){
	qmake-qt5
	make
}

package() {
	INSTALL_ROOT="$pkgdir" make install

	# Remove tests
	rm -rf "$pkgdir"/opt
}

