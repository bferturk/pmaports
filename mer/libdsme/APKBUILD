pkgname=libdsme
pkgver=0.66.1
pkgrel=0
pkgdesc="Libraries for programs that communicate with the Device State Management Entity"
arch="all"
url="https://git.merproject.org/mer-core/libdsme"
license="LGPL-2.1-or-later"
depends="dbus glib"
depends_dev="glib-dev check-dev"
makedepends="$depends_dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://git.merproject.org/mer-core/$pkgname/-/archive/$pkgver/$pkgname-$pkgver.tar.gz
	fix-musl-incompatibility.patch
	"
options="!check" # No suitable tests

build() {
	make
}

package() {
	DESTDIR="$pkgdir" make install

	# Remove tests
	rm -rf "$pkgdir"/opt
}
