# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=clipboard-manager
pkgver=0.6.8
pkgrel=0
pkgdesc="The clipboard manager is responsible for saving data when clients want to"
url="https://github.com/maemo-leste/clipboard-manager"
arch="all"
license="BSD-3"
makedepends="gconf-dev glib-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/maemo-leste/$pkgname/archive/$pkgver.tar.gz"
options="!check"

build() {
	cd "$builddir"
	./configure --prefix=/usr CFLAGS="-Wno-deprecated"
	make
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir" make install
}

sha512sums="4af46ec78a8cc35c7aa1abd8c670412a1a63b7b73b8786d8521db15f2efda94b482f2168ac8ed601258020542f4e875dc61506985fbff4d9429a21cf6af09875  clipboard-manager-0.6.8.tar.gz"
