pkgname=alarmd
pkgver=1.1.17
pkgrel=0
pkgdesc="An alarm framework used for handling of alarms and other timed events"
url="https://github.com/maemo-leste/alarmd"
arch="all"
license="LGPL-2.1"
makedepends="glib-dev dbus-glib-dev dbus-dev libconic-dev osso-systemui-dbus-headers-dev mce-headers statusbar-alarm-dbus-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/maemo-leste/$pkgname/archive/$pkgver.tar.gz"
options="!check"

build() {
	cd "$builddir"
	make
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir" make install
}

