pkgname=osso-af-settings
pkgver=0.9.2
pkgrel=0
pkgdesc="pkg-config settings for Maemo/OS 2006 "
url="https://github.com/maemo-leste/osso-af-settings"
arch="noarch"
license="GPL-2.0"
source="$pkgname-$pkgver.tar.gz::https://github.com/maemo-leste/$pkgname/archive/$pkgver.tar.gz"
options="!check"

build() {
	cd "$builddir"
	./configure --prefix=/usr
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir" make install
}

