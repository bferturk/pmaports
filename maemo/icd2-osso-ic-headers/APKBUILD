# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=icd2-osso-ic-headers
_pkgname=icd2-osso-ic-dev
pkgver=2.0
pkgrel=0
pkgdesc="Compatibility header files for osso-ic-headers"
url="https://github.com/maemo-leste/icd2-osso-ic-dev"
arch="noarch"
license="LGPL-2.1"
makedepends="libtool m4 automake autoconf dpkg-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/maemo-leste/$_pkgname/archive/$pkgver.tar.gz"
options="!check"
builddir="$srcdir/$_pkgname-$pkgver"

prepare() {
	cd "$builddir"

	./autogen.sh
}

build() {
	cd "$builddir"
	./configure --prefix=/usr --enable-doxygen
	make
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir" make install
}

sha512sums="cba939728dfe13beef01ccbee33225de732900d1236a0b8b68ca8c2978aaf1a8c6635bfb7fb5e5618c678f443a04ba3ccc3804111039892fb51046a3233c44da  icd2-osso-ic-headers-2.0.tar.gz"
