# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=statusbar-alarm-dbus
_pkgname=statusbar-alarm-dbus-api
pkgver=0.5.10
pkgrel=0
pkgdesc="Plugin showing current time and indicating if there is any alarm set "
url="https://github.com/maemo-leste/statusbar-alarm-dbus-api"
arch="all"
license="custom"
makedepends="autoconf automake libtool"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/maemo-leste/$_pkgname/archive/$pkgver.tar.gz"
options="!check"
builddir="$srcdir/$_pkgname-$pkgver"

prepare() {
	default_prepare

	cd "$builddir"
	./autogen.sh
}

build() {
	cd "$builddir"
	./configure --prefix=/usr
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir" make install
}

sha512sums="855e00fc8948c69fdc828dab74157fb74203e81e1ef3e98090d69328201259ed31d1b34f94f9e397c659eaa6da498aa3aeb7868e7bb263ffe7b39e4e0572bb50  statusbar-alarm-dbus-0.5.10.tar.gz"
