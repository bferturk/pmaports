pkgname=hildon-status-bar-usb
pkgver=3.0.6
pkgrel=0
pkgdesc="Status menu plugin for indicating USB status of the device, ported to udev and gadget configfs"
url="https://github.com/maemo-leste/hildon-status-bar-usb"
arch="all"
license="unknown"
makedepends="libgudev-dev libhildondesktop-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/maemo-leste/$pkgname/archive/$pkgver.tar.gz"
options="!check"

build() {
	cd "$builddir"
	make
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir" make install
}

