# Contributor: drebrez <drebrez@gmail.com>
# Maintainer: drebrez <drebrez@gmail.com>
pkgname=yamui
pkgver=1.0.6
pkgrel=0
pkgdesc="Minimal UI tool for displaying simple graphical indicators"
url="https://github.com/sailfishos/yamui"
arch="all"
license="ASL 2.0"
makedepends="linux-headers libpng-dev bsd-compat-headers"
source="yamui-$pkgver.tar.gz::https://github.com/sailfishos/yamui/archive/$pkgver.tar.gz"
options="!check"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir/" install
}

