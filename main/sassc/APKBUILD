# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
# Contributor: Thomas Boerger <thomas@webhippie.de>
pkgname=sassc
pkgver=3.6.0
pkgrel=0
pkgdesc="C/C++ implementation of a Sass compiler"
url="http://libsass.org"
arch="all"
license="MIT"
makedepends="autoconf automake libtool libsass-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/sass/$pkgname/archive/$pkgver.tar.gz"

prepare() {
	default_prepare
	autoreconf -vif
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static
	make
}

package() {
	cd "$builddir"

	DESTDIR="$pkgdir" make install
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}

sha512sums="0d8de651b1587f4994a5da85ad09ec2ce6e240213dbaa567c6b9baa612fe82e337061d9a5a8a3a5588e4c366c1178b6fd04e9d699a0be3d83c68f98bac774527  sassc-3.6.0.tar.gz"
