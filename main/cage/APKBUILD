pkgname=cage
pkgver=0.1
pkgrel=0
pkgdesc="A Wayland kiosk"
url="https://gitlab.freedesktop.org/mesa/kmscube"
arch="all"
license="MIT"
depends="wlroots"
makedepends="mesa-dev meson wlroots-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/Hjdskes/cage/archive/v$pkgver.tar.gz"
builddir="$srcdir/cage-${pkgver}"

build(){
	cd "$builddir"
	meson \
		-Dprefix=/usr \
		build
	ninja -C build
}

package() {
	cd "$builddir"/build
	DESTDIR="$pkgdir" ninja install
}

sha512sums="7c4c9d3374e05cb57d76db9d68e0919fcf6d64547d2a13f0698e4bd28d542a0ec0b96911eefda9c69dfb887ae11b91b77af19d340844642907acdd25dd1e5b4b  cage-0.1.tar.gz"
